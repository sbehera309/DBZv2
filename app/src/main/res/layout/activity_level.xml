<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/levelbackground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gamedifficulty" />

    <ImageButton
        android:id="@+id/buttonEasy"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/oneball" />

    <ImageButton
        android:id="@+id/buttonMedium"
        android:layout_height="158dp"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/twoball"/>
    <ImageButton
        android:id="@+id/buttonHard"
        android:layout_height="158dp"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="3"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/threeball"/>

</GridLayout>